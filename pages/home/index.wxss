page {
    height: 100%;
    background: #F7F7F8;
}

.wallpaper-con{
    padding:16rpx;
    height: 100%;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
}

.item{
    width: 100%;
    background:#fff;
    margin-bottom: 24rpx;
    padding: 36rpx 28rpx 32rpx 28rpx;
    box-sizing: border-box;
}
.item_header{
    display: flex;
    flex-direction:row;
    align-items: center;
}
.item_h_avtar{
    width: 64rpx;
    height: 64rpx;
}
.item_h_avtar_img{
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
}
.item_h_name{
    margin-left: 16rpx;
}

.text_box{
    width: 100%;
    font-size: 32rpx;
    color: #333;
    margin: 16rpx 0;
    display: flex;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    flex-direction: column;
    text-overflow:ellipsis;
    overflow:hidden;
    -webkit-line-clamp:3;
}
.item_banner{
    width: 100%;
    height: 394rpx;
}
.img_banner{
    width: 100%;
    height: 394rpx;
}
.item_edit_main{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 32rpx;
}
.item_edit{
    flex:1;
    box-flex: 1;
    display: flex;
    font-size: 28rpx;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.home_bot{
    position: fixed;
    bottom: 0;
    width: 100%;
    height:96rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.home_bot1{
    box-flex: 1;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size:20rpx;
    color: #999;
}
.home_bot1.act{
    color: #333;
}

.home_bot_icon{
    width: 44rpx;
    height: 44rpx;
}

.icon_zan{
    width: 36rpx;
    height: 36rpx;
    margin-right: 5rpx;
}

