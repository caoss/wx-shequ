/* pages/home.wxss */
page{
    height: 100%;
    background:#F7F7F8
}
.main{
    height: 100%;
    box-sizing: border-box;
    position: relative;
}
.scroll_box{
    height: 100%;
    overflow: scroll;
    position: relative;
}
.home-con {
    height: 100%;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
}

.item{
    width: 100%;
    background:#fff;
    margin-bottom: 24rpx;
    padding: 36rpx 28rpx 32rpx 28rpx;
    box-sizing: border-box;
}
.item_header{
    display: flex;
    flex-direction:row;
    align-items: center;
}
.item_h_avtar{
    width: 64rpx;
    height: 64rpx;
}
.item_h_avtar_img{
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
}
.item_h_name{
    margin-left: 16rpx;
}

.text_box{
    width: 100%;
    font-size: 32rpx;
    color: #333;
    margin: 16rpx 0;
}
.item_banner{
    width: 100%;
    height: 394rpx;
    position: relative;
}
.long_img{
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    text-align: center;
    color: #fff;
    padding:15rpx 0;
    font-size: 28rpx;
}
.img_banner{
    width: 100%;
    height: 394rpx;
}
.item_edit_main{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 32rpx;
}
.item_edit{
    flex:1;
    box-flex: 1;
    display: flex;
    font-size: 28rpx;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.home_bot{
    position: fixed;
    bottom: 0;
    width: 100%;
    height:96rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.home_bot1{
    box-flex: 1;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size:20rpx;
    color: #999;
}
.home_bot1.act{
    color: #333;
}

.home_bot_icon{
    width: 44rpx;
    height: 44rpx;
}

.icon_zan{
    width: 36rpx;
    height: 36rpx;
    margin-right: 5rpx;
}

.recommend_main{
    width: 100%;
    padding: 36rpx 30rpx 62rpx 30rpx;
    box-sizing: border-box;
    background: #fff;
}
.recommend_tit{
    font-size:36rpx;
    color: #222;
    margin-bottom: 16rpx;
}
.rmd_item{
    display: flex;
    flex-direction: row;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #ECECEC;
}
.rmd_txt{
    flex: 1;
    box-flex: 1;
    font-size: 32rpx;
    color: #333;
    line-height: 44rpx;
}
.rmd_txt_content{
    padding-right: 14rpx;
    box-sizing: border-box;
    display: flex;
    display: -webkit-box;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #000;
    font-size: 32rpx;
    text-indent: 0rpx;
    padding-left: 0rpx;
    text-align: left;
}
.rmd_img{
    width: 236rpx;
    position: relative;
}
.img_rmd{
    border-radius: 10rpx;
    width: 236rpx;
    height: 148rpx;
    border:1px solid #f7f7f7;
}

.rmd_txt_bot{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 28rpx;
}
.rmd_tb_i{
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
    border-radius: 50%;
}
.rmd_tb_n{
    font-size: 24rpx;
    color: #999;
    line-height: 1;
    position: relative;
    top: -5rpx;
}

.video_time{
    position: absolute;
    height: 28rpx;
    bottom: 14rpx;
    right: 14rpx;
    background:rgba(0, 0, 0, 0.6);
    font-size: 20rpx;
    padding:5rpx;
    color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
}
.v_state_edit button{
    padding: 0;
    background: none;
    line-height: 0;
}
.v_state_edit button::after{ border: none;}

.item_edit button{
    padding: 10rpx;
    background: none;
    line-height: 0;
    margin: 0;
    color: #666;
}

.item_edit button::after{ border: none;}

.btn_share{
    position: relative;
    z-index: 99999;
    background: #fff;
    color: #666;
    border-radius: 5rpx;
}
.pop{
    position: absolute;
    width: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 9;
    left: 0;
    top: 0;
    bottom: 0;
}

.item_edit_btn{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: #666;
}